<Window x:Class="Chip8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chip8"
        mc:Ignorable="d"
        Title="Chip-8 Emulator v0.1" ResizeMode="CanMinimize" SizeToContent="WidthAndHeight">
    
    <DockPanel Margin="10">
        <Button Height="30" Margin="0,0,10,0" Width="100" Click="Button_Click" />
        <DockPanel x:Name="drawableSurface" Background="WhiteSmoke" Height="256" Width="512" />
    </DockPanel>
    
</Window>
